<h1 class="h1 text-center">Welcome</h1>
<div class="d-flex justify-content-center align-items-center">
    <form action="/tracks">
        <div class="form-group">
            <label for="id_username">Your last.fm profile name</label>
            <input type="text" class="form-control" id="id_username" name="username" placeholder="Username:">
            <small class="form-text text-muted">Make sure that your last.fm library is not empty.</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
